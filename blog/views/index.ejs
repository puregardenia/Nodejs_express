<%- include header %>

<% posts.forEach(function (post, index) { %>
    <p>
        <h2>
            <a href="/p/<%= post._id %>">
                <%= post.title%>
            </a>
        </h2>
        <% if (post.head) { %>
            <a href="/u/<%= post.name %>">
                <img src="<%= post.head %>" class="r_head" />
            </a>
        <% } %>
    </p>
    <p class="info">
        作者: <a href="/u/<%= post.name %>"><%= post.name %></a> |
        日期: <%= post.time.minute %>
        <% if (post.tags) { %>
            | 标签：
            <% post.tags.forEach(function (tag, index) { %>
                <% if (tag) { %>
                    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                <% } %>
            <% }) %>
        <% } %>

        <% if (post.reprint_info && post.reprint_info.reprint_from) { %>
            <br><a href="/p/<%= post.reprint_info.reprint_from._id %>">原文链接</a>
        <% } %>

    </p>
    <p><%- post.post %></p>
    <p class="info">
        阅读：<%= (!post.pv) ? 0 : post.pv %> |
        评论：<%= (!post.comments) ? 0 : post.comments.length %> |
        转载：
        <% if (post.reprint_info && post.reprint_info.reprint_to) { %>
            <%= post.reprint_info.reprint_to.length %>
        <% } else { %>
            <%= 0 %>
        <% } %>
    </p>
<% }) %>

<%- include paging %>

<%- include footer %>