<%- include header %>

<% posts.forEach(function (post, index) { %>
    <p>
        <h2>
            <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">
                <%= post.title%>
            </a>
        </h2>
        <% if (post.head) { %>
            <a href="/u/<%= post.name %>">
                <img src="<%= post.head %>" class="r_head" />
            </a>
        <% } %>
    </p>
    <p class="info">
        作者: <a href="/u/<%= post.name %>"><%= post.name %></a> |
        日期: <%= post.time.minute %>
        <% if (post.tags) { %>
            | 标签：
            <% post.tags.forEach(function (tag, index) { %>
                <% if (tag) { %>
                    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                <% } %>
            <% }) %>
        <% } %>
    </p>
    <p><%- post.post %></p>
    <p class="info">
        阅读：
        <% if (!post.pv) { %>
            <%= 0 %>
        <% } else {%>
            <%= post.pv %>
        <% } %>
        | 评论：
        <% if (post.comments) { %>
            <%= post.comments.length %>
        <% } else { %>
        <%= 0 %>
        <% } %>
    </p>
<% }) %>

<%- include paging %>

<%- include footer %>