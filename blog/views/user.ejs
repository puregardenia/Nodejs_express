<%- include header %>

<% posts.forEach(function (post, index) { %>
  <p><h2><a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a></h2></p>
  <p class="info">
    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
    日期：<%= post.time.minute %>
  </p>
  <p><%- post.post %></p>
  <p class="info">
    阅读：
    <% if (!post.pv) { %>
      <%= 0 %>
    <% } else {%>
      <%= post.pv %>
    <% } %>
    | 评论：
    <% if (post.comments) { %>
      <%= post.comments.length %>
    <% } else { %>
      <%= 0 %>
    <% } %>
  </p>
<% }) %>

<%- include paging %>

<%- include footer %>